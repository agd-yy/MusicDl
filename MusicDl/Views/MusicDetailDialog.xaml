<UserControl
    x:Class="MusicDl.Views.MusicDetailDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvts="clr-namespace:MusicDl.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MusicDl.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MusicDl.Models"
    Width="500"
    MaxHeight="600"
    d:DataContext="{d:DesignInstance Type=vm:MusicDetail}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BitmapImage x:Key="DefaultCoverImage" UriSource="/Resources/CoverImage.png" />
        <Style
            x:Key="SectionTitle"
            BasedOn="{StaticResource MaterialDesignHeadline6TextBlock}"
            TargetType="TextBlock">
            <Setter Property="Margin" Value="0,8,0,4" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>
    </UserControl.Resources>

    <materialDesign:Card Margin="16" UniformCornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Header with Cover and Basic Info  -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Cover Image  -->
                        <Border
                            Width="110"
                            Height="110"
                            ClipToBounds="True"
                            CornerRadius="4">
                            <Image Stretch="UniformToFill">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Source" Value="{Binding CoverUrl}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CoverUrl}" Value="{x:Null}">
                                                <Setter Property="Source" Value="{StaticResource DefaultCoverImage}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CoverUrl}" Value="">
                                                <Setter Property="Source" Value="{StaticResource DefaultCoverImage}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Border>

                        <!--  Basic Info  -->
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock
                                Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                Text="{Binding Name}"
                                TextWrapping="Wrap" />

                            <!--  Duration  -->
                            <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                                <materialDesign:PackIcon VerticalAlignment="Center" Kind="Clock" />
                                <TextBlock
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Duration}" />
                            </StackPanel>

                            <!--  Quality & Size  -->
                            <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                                <Border
                                    Padding="6,2"
                                    Background="{DynamicResource PrimaryHueLightBrush}"
                                    CornerRadius="4">
                                    <TextBlock Foreground="{DynamicResource PrimaryHueLightForegroundBrush}" Text="{Binding AudioQuality, Converter={cnvts:AudioQualityConverter}}" />
                                </Border>
                                <TextBlock
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Size, Converter={cnvts:FileSizeConverter}}" />

                                <!--  VIP Badge  -->
                                <Border
                                    Margin="8,0,0,0"
                                    Padding="4,1"
                                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                                    BorderThickness="1"
                                    CornerRadius="2"
                                    Visibility="{Binding IsMember, Converter={cnvts:BooleanToVisibilityConverter}}">
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource SecondaryHueMidBrush}"
                                        Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                        Text="VIP" />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!--  Artists Section  -->
                    <StackPanel Grid.Row="1" Margin="0,16,0,0">
                        <TextBlock Style="{StaticResource SectionTitle}" Text="Artists" />
                        <ItemsControl Margin="0,4,0,0" ItemsSource="{Binding Artist}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon VerticalAlignment="Center" Kind="Artist" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="8,0,0,0"
                                            Style="{StaticResource MaterialDesignBody1TextBlock}"
                                            Text="{Binding Name}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!--  Album Section  -->
                    <StackPanel Grid.Row="2" Margin="0,16,0,0">
                        <TextBlock Style="{StaticResource SectionTitle}" Text="Album" />
                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="Album" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                Style="{StaticResource MaterialDesignBody1TextBlock}"
                                Text="{Binding Album.Name}" />
                        </Grid>
                        <Grid Margin="0,4,0,0" Visibility="{Binding Album.PublishTime, Converter={cnvts:StringToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="CalendarClock" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                Style="{StaticResource MaterialDesignBody1TextBlock}"
                                Text="{Binding Album.PublishTime}" />
                        </Grid>
                    </StackPanel>

                    <!--  URL Section  -->
                    <StackPanel
                        Grid.Row="3"
                        Margin="0,16,0,0"
                        Visibility="{Binding Url, Converter={cnvts:StringToVisibilityConverter}}">
                        <TextBlock Style="{StaticResource SectionTitle}" Text="Music URL" />
                        <TextBox
                            Margin="0,4,0,0"
                            IsReadOnly="True"
                            Text="{Binding Url, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <!--  Lyrics Section  -->
                    <StackPanel
                        Grid.Row="4"
                        Margin="0,16,0,0"
                        Visibility="{Binding Lyric, Converter={cnvts:StringToVisibilityConverter}}">
                        <TextBlock Style="{StaticResource SectionTitle}" Text="Lyrics" />
                        <Border
                            Margin="0,4,0,0"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                <TextBlock
                                    Padding="8"
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    Text="{Binding Lyric}"
                                    TextWrapping="Wrap" />
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!--  Close Button  -->
            <Button
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                Style="{StaticResource MaterialDesignFlatLightButton}">
                CLOSE
            </Button>
        </Grid>
    </materialDesign:Card>
</UserControl>